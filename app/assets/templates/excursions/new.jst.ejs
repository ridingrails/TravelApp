<form method="post">
	<div class="col-xs-6 col-xs-offset-6">
		<div class="col-xs-6">
			<div class="form-group">
				<div class="row text-center place-name">
					<p><strong><textarea rows="2" class="excursion-place" name="excursion[place]" readonly><%= info.name %></textarea></strong></p>
				</div>
			</div>
			<div class="form-group">
				<div class="row text-center">
					<p>Rating: <%= info.rating %></p>
				</div>
			</div>
			<div class="form-group">
				<div class="row text-center">
					<p>Price Level (1-low, 4-high):<%= info.price_level %></p>
				</div>
			</div>
			<div class="form-group">
				<div class="row text-center">
					<p><img src='"<%= info.icon %>"'></p>
				</div>
			</div>
	 </div>

	 <div class="col-xs-6">
		 <div class="form-group">
				<div class="row text-center">
					<label for="excursion_title">Title</label>
				</div>
				<div class="row text-center">
					<input type="text" id="excursion_title" class="excursion-title" name="excursion[title]">
				</div>
			</div>

			<div class="form-group event-time">
				<div class="row from text-center">
					<div class="input-daterange input-group text-center" id="event-datepicker1">
					  <label for="excursion_start">Start *</label>
					  <input type="date" id="excursion_start" class="input-sm form-control datepicker" name="excursion[start]" />
					</div>
				</div>
				<div class="row to text-center">
					<div class="input-daterange input-group text-center" id="event-datepicker2">
					  <label for="excursion_end">End</label>
					  <input type="date" id="excursion_end" class="input-sm form-control datepicker" name="excursion[end]" />
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row text-center">
					<input type="hidden" name="excursion[trip_id]" value="<%= trip.get('id') %>">
					<input type="submit" class="btn btn-success event-time-submit" value="Add">
				</div>
			</div>
		</div>
  </div>
</form>