<form method="post">
	<div class=" col-xs-4 col-xs-offset-4">
	<div class="form-group">
		<div class="row text-center place-name">
			<h4><strong><textarea cols="35" rows="2" class="excursion-place" name="excursion[place]" readonly><%= info.name %></textarea></strong></h4>
		</div>
	</div>
	<div class="form-group">
		<div class="row text-center">
			<p>Rating: <%= info.rating %></p>
		</div>
	</div>
	<div class="form-group">
		<div class="row text-center">
			<p>Price Level (1-low, 4-high):<%= info.price_level %></p>
		</div>
	</div>
	<div class="form-group">
		<div class="row text-center">
			<p><img src='"<%= info.icon %>"'></p>
		</div>
	</div>

	<div class="form-group">
		<div class="row text-center">
			<label for="excursion_title">Title</label>
		</div>
		<div class="row text-center">
			<input type="text" id="excursion_title" class="excursion-title" name="excursion[title]">
		</div>
	</div>

	<div class="form-group event-time">
		<div class="row text-center">
			<div class="input-daterange input-group" id="event-datepicker1">
				<span class="input-group-addon">from</span>
			  <input type="date" class="input-sm form-control datepicker" name="excursion[start]" />
			</div>
		</div>
		<div class="row text-center">
			<div class="input-daterange input-group" id="event-datepicker2">
			  <span class="input-group-addon">to</span>
			  <input type="date" class="input-sm form-control datepicker" name="excursion[end]" />
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row text-center">
			<input type="submit" class="btn btn-success event-time-submit" value="Add">
		</div>
	</div>
  </div>
</form>