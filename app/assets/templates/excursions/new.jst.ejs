
<div class="panel panel-info">
  <div class="panel-body">
		<form class="form-horizontal new-excursion" id="new-excursion" method="post">
				<div class="col-xs-12">
					<div class="row place-name excursion">
						<p><strong><%= info.name %></strong></p>
					</div>
					<div class="row excursion">
						<p>Rating: <%= info.rating %></p>
					</div>
					<div class="row excursion">
						<p>Price Level (1-low, 4-high):<%= info.price_level %></p>
					</div>
					<div class="row excursion">
						<p><img src='"<%= info.icon %>"'></p>
					</div>
					<div class="row excursion">
						<label for="excursion_title">Title</label>
					</div>
					<div class="row excursion">
						<input type="text" id="excursion_title" class="excursion-title" name="excursion[title]">
					</div>
					<div class="row excursion input-daterange input-group" id="event-datepicker1">
					  <label for="excursion_start">Start *</label>
					  <input type="date" id="excursion_start" class="input-sm form-control datepicker" name="excursion[start]" />
						<!-- <select name="excursion[start_time]" form="new-excursion">
							<% for (var i = 1; i <= 24; i++) { %>
						   	<option value="<%= i %>"><%= (i < 12) ? i + " AM" : (i % 12) + " PM" %> :00</option>
							<% } %>
						</select> -->
					</div>
					<div class="row excursion to input-daterange input-group" id="event-datepicker2">
					  <label for="excursion_end">End</label>
					  <input type="date" id="excursion_end" class="input-sm form-control datepicker" name="excursion[end]" />
					</div>
					<div class="row excursion submit-button">
						<input type="submit" class="btn btn-success event-time-submit" value="Add">
					</div>
				</div>
		</form>
  </div>
</div>