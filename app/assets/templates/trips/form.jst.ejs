<div class="row">
	<div>
	  <div class="col-xs-4">
	    <h4>Create Trip</h4>
	  </div>
	</div>
</div>
<form id="new_trip_form" method="post">
	<div class="col-xs-4 trip-new">
	<br>
	<br>
	<div>
		 <div class="row">
			  <div class="form-group">
				  <label for="trip_title control-label">Title</label>
				  <input type="text" class="form-control" id="trip_title" name="trip[title]">
				</div>
			</div>
		</div>

		<div>
		  <div class="row">
				<div class="form-group">
				  <label for="trip_theme control-label">Theme</label>
				  <input type="text" class="form-control" id="trip_theme" name="trip[theme]">
				</div>
			</div>
		</div>

		<div>
		  <div class="row">
				<div class="form-group">
				  <label for="trip_description control-label">Description</label>
				  <textarea class="form-control" id="trip_description" name="trip[description]"></textarea>
				</div>
			</div>
		</div>

		<div>
		  <div class="row">
				<div class="form-group">
				  <label for="trip_destination control-label">Destination</label>
					<input type="text" class="form-control" id="trip_destination" name="trip[start_loc]">
				</div>
			</div>
		</div>

		<div class="date-input">
		  <div class="row">
				<div class="input-daterange input-group" id="datepicker">
					<span class="input-group-addon">from</span>
				  <input type="date" class="input-sm form-control datepicker" name="trip[start_date]" />
				    <span class="input-group-addon">to</span>
				  <input type="date" class="input-sm form-control datepicker" name="trip[end_date]" />
				</div>
			</div>
		</div>

		<div>
		  <div class="row">
				<button class="btn btn-success add-events">Add Events</button>
			</div>
		</div>

	</div>
	<div class="col-xs-7 col-xs-offset-1 trip-details" id="trip-events" data-lat="" data-lng="">
		<div class="row">
			<div class="col-xs-8">
				<input type="text" id="dest-search" name="dest-search">
			</div>
			<div class="col-xs-4">
				<input type="submit" id="new-events" class="btn btn-primary dest-search-submit" value="Find Places">
			</div>
		</div>
		<div id="map-canvas" class="new">
		</div>
	</div>
	<div class="row">
		<div class="col-xs-offset-2 info-area">
			<div class="info-area-ul">
			</div>
		</div>
  </div>

</form>
