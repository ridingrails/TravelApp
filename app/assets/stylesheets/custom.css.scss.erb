.jumbotron {
  background-image: 'http://placehold.it/800x500';
	height: 500px;
	width: 100%;
}

.home-btn {
	margin-right: 20px;
}

#carousel .item {-webkit-transition: opacity 3s; -moz-transition: opacity 3s; -ms-transition: opacity 3s; -o-transition: opacity 3s; transition: opacity 3s;}
#carousel .active.left {left:0;opacity:0;z-index:2;}
#carousel .next {left:0;opacity:1;z-index:1;}

#content-item-main {
	padding: 4px;
	border: 1px solid;
	margin: 5px 10px;

	div.image {
		vertical-align: middle;
	}
}

#map-canvas {
	border: 2px solid #00FFFF;
	height:400px;
	width:700px;
	margin-bottom: 50px;

	.new {
		width: 100%;
		padding-left: 30px;
	}
}

button.dest-search {
	width: 180px;
}

.dest-search {
	margin-bottom: 20px;
}

input[name=dest-search] {
	width: 100%;
	height: 35px;
}

.btn.dest-search-submit {
	width: 80%;
}

div.dest-search {
	width: 100%;
}

.btn.add-events {
	margin-bottom: 30px;
	width: 100%;
}

#photo-panel {
  background: #fff;
  padding: 5px;
  overflow-y: auto;
  overflow-x: hidden;
  width: 300px;
  max-height: 300px;
  font-size: 14px;
  font-family: Arial;
  border: 1px solid #ccc;
  box-shadow: -2px 2px 2px rgba(33, 33, 33, 0.4);
  display: none;
}

button#new-trip {
	margin-bottom: 20px;
}

button#new-group {
	margin-bottom: 20px;
}

button.trip-submit {
	width: 150px;
}

button.group-submit {
	width: 150px;
}

div#trip-events {
	display: none;

	vis-true {
		display: block;
	}
}

div.drag-area {
	margin-left: -60px;
	min-height: 400px;
	border: 1px dotted black;
}

.main-nav {
	background-color: white;
}

input.new-user {
	width: 200px;
}

div.date-input {
	margin-top: 20px;
	margin-bottom: 20px;

  .datepicker {
		width: 150px;
	}
}

input.event-time-submit {
	width: 140px;
}

#new-excursion div.submit-button {
	margin-top: 20px;
	width: 150px;
}

span.input-group-addon {
	display: inline-block;
	width: 40px;
}

div.form-group.event-time {
	padding-left: 100px;
}

div.input-daterange {
	width: 150px;
}

#new-excursion div.row {
	margin-top: 10px;
}

button.action {
	width: 100px;

	.remove {
		background-color: #FFCC66;

	}
}

.lat, .lng {
	display: none;
